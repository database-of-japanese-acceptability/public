<div style='text-align:right'><%= flash[:message] %></div>
<!--%= search_link(@s_morphemes, @keyword) %-->
<h3>Phrase List <%= @keyword %></h3>
<%= render :partial => 'layouts/search_and_filter' %>
<%= render :partial => 'layouts/order_by' %>
<table>
  <% i = 0; num_columns = 6; mod = 0 %>
  <% @s_phrases.each do |sp| %>
    <%  i += 1; mod = i % num_columns %>
    <%= "<tr>"  if mod == 1 %>
    <td><%= link_to(sp.form + " (" + sp.phrases_count.to_s + ")", :action=>"specify", :id => sp.id) %></td>
    <%= "</tr>" if mod == 0 %>    
  <% end %>
  <% unless mod == 0 %>
    <%= "<td></td>" * (num_columns - mod) + "</tr>" %>
  <% end %>
</table>
